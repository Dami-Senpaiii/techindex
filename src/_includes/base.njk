<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  {% set pageTitle = title if title else false %}
  <title>{% if pageTitle %}{{ pageTitle }} – {% endif %}{{ site.title }}</title>
  {% if description %}
    <meta name="description" content="{{ description }}">
  {% else %}
    <meta name="description" content="{{ site.description }}">
  {% endif %}
  <link rel="icon" href="/assets/logo.svg">
  <link rel="stylesheet" href="/assets/style.css">
</head>
<body>
  <nav class="nav">
    <div class="container nav-inner">
      <a href="/" class="brand" aria-label="TechIndex Startseite">
        <img src="/assets/logo.svg" alt="" width="28" height="28" />
        <span>TechIndex</span>
      </a>
      <div class="menu" role="navigation" aria-label="Hauptmenü">
        <a href="/beitraege/">Beiträge</a>
        <a href="/admin/">Admin</a>
      </div>
      <a class="cta small" href="#">Beitrag einreichen</a>
    </div>
  </nav>

  {{ content | safe }}

  <footer id="about">
    <div class="container" style="padding:20px 0 28px">
      <div class="muted small">© {{ "now" | date | dateCH }} TechIndex.ch — Hosted on Cloudflare.</div>
    </div>
  </footer>
</body>
</html>
